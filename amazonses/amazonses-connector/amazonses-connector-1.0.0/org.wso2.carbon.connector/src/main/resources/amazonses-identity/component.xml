<component name="amazonses-identity" type="synapse/template">
    <subComponents>
        <component name="listIdentities">
            <file>listIdentities.xml</file>
            <description>Returns a list containing all of the identities.</description>
        </component>
        <component name="deleteIdentity">
            <file>deleteIdentity.xml</file>
            <description>Deletes the specified identity.</description>
        </component>
        <component name="listIdentityDkimAttributes">
            <file>listIdentityDkimAttributes.xml</file>
            <description>Returns the current status of Easy DKIM signing for an entity.</description>
        </component>
        <component name="listIdentityNotificationAttributes">
            <file>listIdentityNotificationAttributes.xml</file>
            <description>Given a list of verified identities.</description>
        </component>
        <component name="listIdentityVerificationAttributes">
            <file>listIdentityVerificationAttributes.xml</file>
            <description>Given a list of identities.</description>
        </component>
        <component name="setIdentityDkimEnabled">
            <file>setIdentityDkimEnabled.xml</file>
            <description>Enables or disables Easy DKIM signing of email sent from an identity.</description>
        </component>
        <component name="setIdentityFeedbackForwardingEnabled">
            <file>setIdentityFeedbackForwardingEnabled.xml</file>
            <description>Enables or disables whether Amazon SES forwards bounce and complaint notifications as email.
            </description>
        </component>
        <component name="setIdentityNotificationTopic">
            <file>setIdentityNotificationTopic.xml</file>
            <description>Sets the Amazon Simple Notification Service.</description>
        </component>
    </subComponents>
</component>